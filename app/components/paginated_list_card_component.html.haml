= render CardComponent.new do | component|
  - component.with_header do
    %h3
      %i.fa.fa-solid{class: fa_icon}
      = title
  .row
    .col-2
      = render SorterComponent.new(options: sort_options, param_name: sort_param)
    = render MultiColumnListComponent.new(collection: collection,
      columns: columns,
      item_renderer: item_renderer)
  = pagy_bootstrap_nav(pagy).html_safe if pagy.pages > 1
